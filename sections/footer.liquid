<!-- FOOTER STYLES -->
{{ 'footer.css' | asset_url | stylesheet_tag }}

<!-- VARIABLES -->
{% if section.settings.footer_shopping_list == blank %}
  {% assign shopping_linklists = linklists['footer-shopping-menu'] %}
{% else %}
  {% assign shopping_linklists = linklists[section.settings.footer_shopping_list] %}
{% endif %}

{% if section.settings.footer_company_list == blank %}
  {% assign company_linklists = linklists['footer-company-menu'] %}
{% else %}
  {% assign company_linklists = linklists[section.settings.footer_company_list] %}
{% endif %}

{% if section.settings.instagram_url == blank %}
  {% assign instagram_url = 'https://www.instagram.com' %}
{% else %}
  {% assign instagram_url = section.settings.instagram_url %}
{% endif %}

{% if section.settings.facebook_url == blank %}
  {% assign facebook_url = 'https://www.facebook.com' %}
{% else %}
  {% assign facebook_url = section.settings.facebook_url %}
{% endif %}

{% if section.settings.spotify_url == blank %}
  {% assign spotify_url = 'https://www.spotify.com' %}
{% else %}
  {% assign spotify_url = section.settings.spotify_url %}
{% endif %}

<!-- FOOTER -->
<footer class="footer tmp-footer">
  <div class="container grid grid-4-col grid-footer">
    <!-- FOOTER LOGO ICON -->
    <div class="footer-col">
      <div class="footer-logo-icon">
        {% render 'icon-rocket' %}
      </div>
    </div>

    <!-- FOOTER SHOPPING NAV -->
    <div class="footer-col">
      <p class="heading-footer">Shopping</p>
      <nav class="footer-nav" role="navigation">
        <ul class="footer-list">
          {% for link in shopping_linklists.links %}
            <li class="footer-item">
              <a class="link__footer" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>

    <!-- FOOTER COMPANY NAV -->
    <div class="footer-col">
      <p class="heading-footer">Company</p>
      <nav class="footer-nav" role="navigation">
        <ul class="footer-list">
          {% for link in company_linklists.links %}
            <li class="footer-item">
              <a class="link__footer" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>

    <!-- FOOTER FOLLOW NAV -->
    <div class="footer-col">
      <p class="heading-footer">Follow us</p>
      <nav class="footer-nav" role="navigation">
        <ul class="footer-icon-list">
          <li class="footer-item">
            <a
              class="link__footer-icon"
              href="{{ instagram_url }}"
              target="_blank"
            >
              {% render 'icon-instagram', size: '2.4rem' %}
            </a>
          </li>
          <li class="footer-item">
            <a
              class="link__footer-icon"
              href="{{ facebook_url }}"
              target="_blank"
            >
              {% render 'icon-facebook', size: '2.4rem' %}
            </a>
          </li>
          <li class="footer-item">
            <a
              class="link__footer-icon"
              href="{{ spotify_url }}"
              target="_blank"
            >
              {% render 'icon-spotify', size: '2.4rem' %}
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- FOOTER COPYRIGHT -->
  <div class="footer-container container">
    <p class="footer-copyright">
      &copy; {{ 'now' | date: '%Y' }},
      <span class="footer-logo-text">The Moon Project Ph</span>
      Powered by Shopify
    </p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_shopping_list",
      "label": "Footer Shopping Menu"
    },
    {
      "type": "link_list",
      "id": "footer_company_list",
      "label": "Footer Company Menu"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "spotify_url",
      "label": "Spotify URL"
    }
  ]
}
{% endschema %}
